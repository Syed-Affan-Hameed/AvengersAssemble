<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <ImageView
        android:id="@+id/imgtony_pic"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/tony_stark"
        android:layout_margin="15dp"
        />
    <TextView
        android:id="@+id/txttonyname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/imgtony_pic"
        android:text="      Tony Stark"
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/black"

        />
    <TextView
        android:id="@+id/txttonyemail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" tonystark@starkindustries.com"
        android:layout_below="@+id/txttonyname"
        android:textColor="@color/black"
        android:layout_marginTop="15dp"
        android:textSize="18sp"
        android:layout_toRightOf="@+id/imgtony_pic"/>
    <TextView
        android:id="@+id/txttonyphone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="    91-112121221"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_below="@+id/txttonyemail"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/imgtony_pic"/>
    <Button
        android:id="@+id/btnmoreinfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="More Information"
        android:textSize="18sp"
        android:background="@color/teal_200"
        android:textStyle="bold"
android:layout_below="@+id/imgtony_pic"/>
    <Button
        android:id="@+id/btnclickexit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Exit the app"
        android:textSize="18sp"
        android:background="@color/red_100"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>